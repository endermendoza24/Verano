        <h2><strong>Proveedores</strong></h2>
        <br />
        <asp:Button ID="btnRetornar" runat="server" CssClass="btn btn-block btn-warning" Text="Agregar proveedor" Font-Bold="True" Font-Size="Large" ForeColor="White" PostBackUrl="~/catProveedores.aspx" ToolTip="Agregar nuevo proveedor" />
