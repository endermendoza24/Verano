        <asp:GridView ID="dtgMostrarProveedores" CssClass="table table-bordered" runat="server" AutoGenerateColumns="False" DataKeyNames="idProveedor" DataSourceID="catProveedor" AutoGenerateDeleteButton="True" AutoGenerateEditButton="True" CaptionAlign="Top" BackColor="White" BorderColor="#CCCCCC" BorderStyle="None" BorderWidth="1px" CellPadding="4" ForeColor="Black" GridLines="Horizontal">
